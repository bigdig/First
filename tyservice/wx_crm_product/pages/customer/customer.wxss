/* 删除按钮 */
.txt{
    position: absolute;
    top:0;
    background-color: #fff;
    width: 100%;
    z-index: 5;
    padding:0 10rpx;
    transition: left 0.2s ease-in-out;
    white-space:nowrap;
    overflow:hidden;
    text-overflow:ellipsis;
}
.del{
    position: absolute;
    top:0;
    background-color: #e64340;
    width: 180rpx;text-align: center;
    z-index: 4;
    right: 0;
    color: #fff
}
.submit{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 70rpx;
  color: #ffffff;
  line-height: 70rpx;
  text-align: center;
  background-color: #FFC24C;
}
.box_title{
   margin-top: 20rpx;
   color: #282C3F;
   padding: 10rpx 0 0 46rpx;
   background-color: #ffffff;
}
.flex{ 
   margin-bottom: 20rpx;
}  
.box_item{
  display: inline-block;  
  padding: 0rpx 30rpx; 
  background: #F7F7FA;  
  font-size: 24rpx;  
  color: #9FA3BB;
  border-radius: 4px;  
  border: 1rpx solid #eeeeee;
  box-sizing: border-box;
  margin-right: 20rpx;
  margin-top: 20rpx;
  line-height: 50rpx;
}  
.is_checked {  
  border: 1px solid #FC6E57;  
  box-sizing: border-box;
  color: #ffffff;  
  background: #FE8166;  
}  

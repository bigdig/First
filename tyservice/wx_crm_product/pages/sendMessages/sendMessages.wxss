/* pages/sendMessages/sendMessages.wxss */
.box{
  width: 100%;
  height: 100%;
  position: absolute;
  background-color: #F3F2F7;
  border-top: 1rpx solid #F3F2F7;
}
.box_list{
  height: 80rpx;
  line-height: 80rpx;
  background-color: #ffffff;
  padding-left: 40rpx;
  border-bottom: 1rpx solid #F3F2F7;
  position: relative;
}
.box_val{
  float: right;
  padding-right: 60rpx;
  color: #9FA3BB;
}
.box_message{
  width: 450rpx;
  min-height: 100rpx;
  background-color: #FE8166;
  margin-top: 60rpx ;
  margin-left: 120rpx;
  padding: 30rpx;
  color: #FFFFFF;
  border-radius: 40rpx;
  border-bottom-right-radius: 0rpx;
}
.box_mess{
  position: relative;
}
.box_urse{
  border-radius:50%;
  padding: 20rpx 15rpx;
  font-size: 18rpx;
  background-color: #26BB85;
  color: #ffffff;
  position: absolute;
  bottom: 0rpx;
  right: 40rpx;
}
.adit_message{
  position: fixed;
  bottom: 40rpx;
}
.adit_message input{
  width: 600rpx;
  margin-left: 50rpx;
  font-size: 24rpx;
  padding-left: 30rpx;
  background-color: #ffffff;
  border-radius:32rpx; 
  color: #9FA3BB;
}
.adit_message image{
  width: 45rpx;
  height: 45rpx;
  position: absolute;
  right: 10rpx;
  bottom: 5rpx;
  z-index: 10;
}
.img_details{
  position: absolute;
  width: 20rpx;
  height: 30rpx;
  right: 30rpx;
  top: 25rpx;
}
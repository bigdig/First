/* pages/32kaoqin_detail/index.wxss */
page{ background-color: #fff;}

.center{ padding: 78rpx 55rpx 55rpx 55rpx; background-color: #fff;}
.show_name{ line-height: 98rpx; font-size: 40rpx;}
.show_content{ line-height: 48rpx; color: #999; font-size: 32rpx;}

.toast-box {
    width: 100%;
    height: 100%;
    opacity: 1;
    position: fixed;
    top: 0px;
    left: 0px;
}
 
.toastbg {
    opacity: 0.2;
    background-color: black;
    position: absolute;
    width: 100%;
    min-height: 100vh;
}
 
.showToast {
    position: absolute;
    opacity: 1;
    width: 70%;
    margin-left: 15%;
    margin-top: 40%;
}
 
.toast-title {
    padding-left: 5%;
    background-color: #FBA703;
    color: white;
    padding-top: 2vh;
    padding-bottom: 2vh;
    border-top-right-radius: 16rpx;
    border-top-left-radius: 16rpx;
}
 
.toast-main {
    padding-top: 2vh;
    padding-bottom: 2vh;
    background-color: white;
}
 
.toast-input {
    margin-left: 5%;
    margin-right: 5%;
    border: 1px solid #ddd;
    padding-left: 2vh;
    padding-right: 2vh;
    padding-top: 1vh;
    padding-bottom: 1vh;
}
.toast-button {
    display: flex;
}
.button1 {
    width: 50%;
}
.button2 {
    width: 50%;
}
.button1 button {
    width: 100%;
    background-color: white;
    color: #FBA703;
    border-radius: 0px;
}
 
.button2 button{
    width: 100%;
    background-color: white;
    color: black;
    border-radius: 0px;
}
textarea{
  width:100%;
  height: 3em;
  margin-top:5px;
  padding: 3px;
}

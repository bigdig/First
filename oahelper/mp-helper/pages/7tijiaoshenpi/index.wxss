.send_btn{ margin-bottom: 60rpx;}

.center .choose_img{ display: inline-block; margin-right: 45rpx; margin-bottom: 60rpx;}

.weui-textarea{ height:200rpx;}

.help {
  background-color: #fff;
  margin: 0 auto;
}
.help .help_item {
  margin: 10rpx auto;
}
.help .help_item .title {
  font-size: 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  display: flex;
  color: #FB7F03;
}
.help .help_item .title .title_1 {
  width: 630rpx;
  height: 60rpx;
}
.help .help_item .title .title_2 {
  width: 50rpx;
  height: 60rpx;
  text-align: center;
}
.help .help_item .title .title_2 image {
  width: 35rpx;
  height: 35rpx;
}
.help .help_item .detail {
  margin: 10rpx auto;
  font-size: 25rpx;
  line-height: 40rpx;
  text-indent: 2em;
}

.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
}
.td {
    justify-content: center;
    word-wrap: break-word;
    word-break: break-all;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 40%;

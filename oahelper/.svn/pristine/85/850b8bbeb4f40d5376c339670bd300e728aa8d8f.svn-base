/* pages/21xiaoxi_detail/index.wxss */
page{ padding: 0 30rpx 150rpx 30rpx; box-sizing: border-box; background-color: #fff;
font-family: "PingFangSC-Medium", "PingFangSC-Regular", "sans-serif", "STHeitiSC-Light", "微软雅黑", "Microsoft YaHei";
}

.top{ padding: 22rpx 0; line-height: 66rpx; border-bottom: #E5E5E5 solid 2rpx;}
.top view:first-child{ font-size: 44rpx;}
.top view:last-child{ color: #999; font-size: 28rpx;}

.center{ padding: 30rpx 0; line-height: 44rpx; font-size: 32rpx;
word-break:break-all !important; word-wrap:break-word !important; white-space:pre-wrap !important;
text-align:justify;text-justify:inter-ideograph;
}
.center > view{ margin-bottom: 44rpx;}
.center image{ max-width: 100% !important;}
.center .choose_img{ display: inline-block; margin-right: 45rpx; margin-bottom: 60rpx;}

.copy_link{  padding-left:18rpx; line-height: 62rpx; color: #3271FF; font-size: 32rpx; background-color: #F2F3F4;}
.copy_msg{ line-height: 58rpx; text-align: center; color: #FBA703; font-size: 28rpx;}

.bottom{ width: 100%; height: 120rpx; line-height: 120rpx; margin-top: 96rpx; text-align: center; color: #fff; font-size: 36rpx; background-color: #FBA703; position:fixed; left: 0; bottom: 0;}

.toast-box {
    width: 100%;
    height: 100%;
    opacity: 1;
    position: fixed;
    top: 0px;
    left: 0px;
}
 
.toastbg {
    opacity: 0.2;
    background-color: black;
    position: absolute;
    width: 100%;
    min-height: 100vh;
}
 
.showToast {
    position: absolute;
    opacity: 1;
    width: 70%;
    margin-left: 15%;
    margin-top: 40%;
}
 
.toast-title {
    padding-left: 5%;
    background-color: #FBA703;
    color: white;
    padding-top: 2vh;
    padding-bottom: 2vh;
    border-top-right-radius: 16rpx;
    border-top-left-radius: 16rpx;
}
 
.toast-main {
    padding-top: 2vh;
    padding-bottom: 2vh;
    background-color: white;
}
 
.toast-input {
    margin-left: 5%;
    margin-right: 5%;
    border: 1px solid #ddd;
    padding-left: 2vh;
    padding-right: 2vh;
    padding-top: 1vh;
    padding-bottom: 1vh;
}
.toast-button {
    display: flex;
}
.button1 {
    width: 50%;
}
.button2 {
    width: 50%;
}
.button1 button {
    width: 100%;
    background-color: white;
    color: #FBA703;
    border-radius: 0px;
}
 
.button2 button{
    width: 100%;
    background-color: white;
    color: black;
    border-radius: 0px;
}
textarea{
  width:100%;
  height: 3em;
  margin-top:5px;
  padding: 3px;
}